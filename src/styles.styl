/* You can add global styles to this file, and also import other style files */
html, body
	height 100%
	font-family 'Roboto', sans-serif

/****************************/
/* BLOCK UI OVERRIDE STYLES */
/****************************/

/* Block UI Wrapper (Backdrop) */
div
	.block-ui-wrapper
			background-color: rgba(212, 205, 205, 0.7)

/* Spinner */
div
	.block-ui-wrapper 
		.loader 
			border-color: #fff /* Circle color */
			border-left-color: #000000 /* Spinning section in circle color */

/* Message */
div
	.block-ui-spinner
		.message 
			color: #000000 /* Loading text color */